<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_follower"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_follower"
        android:layout_width="49dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1"
        android:layout_marginVertical="24dp"
        android:layout_marginHorizontal="21dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <TextView
        android:id="@+id/tv_follower_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"

        android:textColor="@color/gray_1"
        android:textSize="16sp"
        android:fontFamily="@font/noto_sans_kr"
        android:textFontWeight="700"
        android:includeFontPadding="false"

        app:layout_constraintStart_toEndOf="@+id/iv_follower"
        app:layout_constraintTop_toTopOf="@+id/iv_follower"
        tools:text="이름" />

    <TextView
        android:id="@+id/tv_follower_introduction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"

        android:textColor="@color/gray_1"
        android:textSize="14sp"
        android:fontFamily="@font/noto_sans_kr"
        android:textFontWeight="400"
        android:includeFontPadding="false"

        app:layout_constraintStart_toStartOf="@+id/tv_follower_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_follower_name"
        tools:text="간단한 소개" />
</androidx.constraintlayout.widget.ConstraintLayout>