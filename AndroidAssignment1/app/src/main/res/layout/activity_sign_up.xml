<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.account.SignUpActivity">

    <TextView
        android:id="@+id/tv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"

        android:fontFamily="@font/noto_sans_kr"
        android:includeFontPadding="false"
        android:text="깃허브 아이디"
        android:textColor="@color/gray_1"
        android:textFontWeight="700"

        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/tv_name"
        app:layout_constraintTop_toBottomOf="@+id/et_name" />

    <EditText
        android:id="@+id/et_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/input_radius"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"

        android:fontFamily="@font/noto_sans_kr"
        android:textFontWeight="400"
        android:ems="10"
        android:hint="깃허브 아이디를 입력해주세요."
        android:inputType="textPersonName"
        android:textSize="14sp"
        android:includeFontPadding="false"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_id"
        app:layout_constraintTop_toBottomOf="@+id/tv_id" />

    <TextView
        android:id="@+id/tv_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"

        android:fontFamily="@font/noto_sans_kr"
        android:includeFontPadding="false"
        android:text="비밀번호"
        android:textColor="#000000"
        android:textFontWeight="700"
        android:textSize="14sp"

        app:layout_constraintStart_toStartOf="@+id/tv_id"
        app:layout_constraintTop_toBottomOf="@+id/et_id" />

    <EditText
        android:id="@+id/et_pw"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/input_radius"
        android:paddingVertical="12dp"
        android:paddingHorizontal="16dp"

        android:fontFamily="@font/noto_sans_kr"
        android:textFontWeight="400"
        android:ems="10"
        android:hint="비밀번호를 입력해주세요."
        android:inputType="textPassword"
        android:textSize="14sp"
        android:includeFontPadding="false"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_pw"
        app:layout_constraintTop_toBottomOf="@+id/tv_pw" />

    <Button
        android:id="@+id/btn_signup_submit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="74dp"
        android:background="@drawable/button_radius"
        android:padding="12dp"

        android:fontFamily="@font/noto_sans_kr"
        android:textFontWeight="700"
        android:text="회원가입"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:includeFontPadding="false"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_sign_up_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:layout_marginLeft="20dp"

        android:text="회원가입"
        android:textColor="@color/gray_1"
        android:textSize="25sp"
        android:fontFamily="@font/noto_sans_kr"
        android:textFontWeight="700"
        android:includeFontPadding="false"


        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="55dp"

        android:text="이름"
        android:textColor="@color/gray_1"
        android:textSize="14sp"
        android:fontFamily="@font/noto_sans_kr"
        android:textFontWeight="700"
        android:includeFontPadding="false"


        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_sign_up_title" />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/input_radius"
        android:paddingVertical="12dp"
        android:paddingHorizontal="16dp"


        android:ems="10"
        android:hint="이름을 입력해주세요."
        android:inputType="textPersonName"
        android:textSize="14sp"
        android:fontFamily="@font/noto_sans_kr"
        android:textFontWeight="400"
        android:includeFontPadding="false"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_name" />

</androidx.constraintlayout.widget.ConstraintLayout>